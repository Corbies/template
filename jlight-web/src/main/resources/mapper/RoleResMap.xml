<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lew.jlight.web.entity.RoleRes">
    <resultMap type="com.lew.jlight.web.entity.RoleRes" id="RoleRes">
        <result column="role_id" property="roleId"/>
        <result column="res_id" property="resId"/>
        <result column="is_delete" property="isDelete"/>
        <result column="create_by" property="createBy"/>
        <result column="create_time" property="createTime"/>
        <result column="update_by" property="updateBy"/>
        <result column="update_time" property="updateTime"/>
        <result column="remark" property="remark"/>
    </resultMap>

    <insert id="addRoleRes">
        insert into
        sys_role_res(role_id,res_id,is_delete,create_by,create_time,update_by,update_time,remark)
        values(#{roleId},#{resId},#{isDelete},#{createBy},#{createTime},#{updateBy},#{updateTime},#{remark})
    </insert>

    <select id="getResIdsByRoleId" parameterType="java.lang.String" resultType="String">
        select distinct(res_id) as resId from sys_role_res where is_delete = 0 and role_id =
        #{roleId}
    </select>

    <delete id="deleteByRoleId" parameterType="java.lang.String">
        delete from sys_role_res where is_delete = 0 and role_id = #{roleId}
    </delete>


</mapper>